<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    
    <% include ./partials/nav %>

    <div class="container">
      <h2>Our users Library</h2>
      <% for(var i=books.length-1; i >= 0; i--) { %>
        <% if(!user || user.username !== books[i].user) { %>
            <div class="thumbnail">
              <a data-toggle="modal" data-target="#tradeModal">
                <img class="thumbnail_image" src="<%= books[i].imageLink %>" alt="<%= books[i].title %>" >
              </a>
              <div class="user">
                <p> <%= books[i].author %> <br>
                <%= books[i].title %> <br>
                Owned by <a href="/profile/<%= books[i].user %>"><b><%= books[i].user %></b></a></p>
              </div>
            </div>
            <!-- trade modal -->
            <% if (typeof user !== "undefined") { %>
            <div class="modal fade" id="tradeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Update your infos</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form id="update">
                      <div class="input-group">
                        <input class="form-control" type="text" value="" id="country-input" maxlength="12" placeholder="Your country" required>
                      </div>
                      <div class="input-group">
                        <input class="form-control" type="text" value="" id="city-input" maxlength="12" placeholder="Your city" required>
                      </div>
                      <button id="submit" class="btn btn-default">Submit</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <% } %>

          <% } %>
        <% } %>

    </div><!-- /.container -->

  </body>
</html>
